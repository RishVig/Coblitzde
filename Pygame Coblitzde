import pygame

pygame.init()

width = 800
height = 600

#With help of Eisha(My sister!)

game_display = pygame.display.set_mode((width,height))

pygame.display.set_caption("Fortress")

crashed = False
#MAIN LOOP
while crashed != True:
    for event in pygame.event.get():
        print(event)
    
        if event.type == pygame.QUIT:
            
            crashed = True
        

    pygame.display.update()

pygame.quit()

